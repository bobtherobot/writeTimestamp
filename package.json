{
  "name": "writeTimestamp",
	"displayName": "Write Timestamp",
	"description": "Inserts configurable timestamp into your code with keyboard shortcut.",
	"version": "0.0.1",
	"license": "MIT",
	"author": {
		"name": "mike gieson",
		"email": "mike@plaino.com",
		"url": "https://www.gieson.com/"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"VSCode",
		"extension",
		"timestamp",
		"time stamp",
		"insert timestamp",
		"insert time stamp",
		"write timestamp",
		"write time stamp",
		"enter timestamp",
		"enter time stamp",
		"inject timestamp",
		"inject time stamp"
	],
	"icon" : "./icon-512.png",
	"main": "./extension.js",

	"activationEvents": [
        "*"
	],
	"contributes": {
		"commands": [{
            "command": "writeTimestamp.perform",
            "title": "Write Timestamp"

		}],
		"keybindings": [
			{
				"command": "writeTimestamp.perform",
				"key": "ctrl+shift+t",
				"mac": "cmd+shift+t",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Write Timestamp Configuration",
			"properties": {
				"writeTimestampString.format": {
					"type": "string",
					"default": "YYYY-MM-DD hh:mm:ss",
					"description": "Date time format to be used. See extension for format options. e.g. Y-MM-DD"
				},
				"writeTimestampString.gmt": {
					"type": "boolean",
					"default": false,
					"description": "Use GMT (UTC) universal time."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.59.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }

}
